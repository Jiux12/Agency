<Page x:Class="EstateApp.DealAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EstateApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DealAdd">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10">
            <TextBlock Text="Потребность" FontWeight="Bold"/>
            <TextBox Height="30"/>
            <TextBlock Margin="0,10,0,0" Text="Предложение" FontWeight="Bold"/>
            <TextBox Height="30"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10">
            <Button Content="Создать" Width="200" Height="30" Margin="0,120,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
